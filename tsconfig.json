{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": false,
    "outDir": "./dist",
    "rootDir": "./",
    "types": ["node", "@playwright/test"],
    "baseUrl": ".",
    "paths": {
      "@pages/*": ["pages/*"],
      "@components/*": ["components/*"],
      "@helpers/*": ["helpers/*"],
      "@fixtures/*": ["fixtures/*"],
      "@models/*": ["models/*"],
      "@data/*": ["data/*"],
      "@utils/*": ["utils/*"]
    }
  },
  "include": [
    "tests/**/*",
    "pages/**/*",
    "components/**/*",
    "helpers/**/*",
    "fixtures/**/*",
    "models/**/*",
    "utils/**/*",
    "playwright.config.ts"
  ],
  "exclude": [
    "node_modules",
    "test-results",
    "playwright-report"
  ]
}



